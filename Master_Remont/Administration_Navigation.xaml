<Window x:Class="Master_Remont.Administration_Navigation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Master_Remont"
        mc:Ignorable="d"
                xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="МастерРемонт" Background="#474747" WindowState="Maximized" WindowStartupLocation="CenterScreen" Height="850" Width="1500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Button Background="#21201F" BorderBrush="#21201F" x:Name="exit" Grid.Column="0" Height="50" Grid.Row="0" Click="exit_Click" HorizontalAlignment="Center" Margin="0,11,0,12" Width="150">
            <materialDesign:PackIcon Kind="ArrowLeft" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="150" />
        </Button>
        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Button Name="Mainbtn"  Grid.Row="0" Height="180" Margin="0,2" FontSize="30" Content="Главная" Click="Mainbtn_Click"/>
            <Button Name="Clienttbtn" Grid.Row="1" Height="180" Margin="0,2" FontSize="30" Content="Клиенты" Click="Clienttbtn_Click"/>
            <Button Name="Partbtn"  Grid.Row="2" Height="180" Margin="0,2" FontSize="30" Content="Запчасти" Click="Partbtn_Click"/>
            <Button Name="Employeebtn" Height="180" Margin="0,2" Grid.Row="3" FontSize="30" Content="Сотрудники" Click="Employeebtn_Click"/>
        </Grid>
        <Frame Name="frame" Grid.Row="1" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
